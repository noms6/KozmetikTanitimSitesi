@model IEnumerable<KozmetikTanitimSite.Models.Product>

@{
    ViewBag.Title = "Ürün Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary mb-4">Ürün Listesi</h2>

<table class="table table-bordered table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Ürün Adı</th>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Görsel</th>
            <th>Öne Çıkan</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price ₺</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="Resim" width="80" class="img-thumbnail" />
                    }
                    else
                    {
                        <span class="text-muted">Resim Yok</span>
                    }
                </td>
                <td>
                    @if (item.IsFeatured)
                    {
                        <span class="badge bg-success">Evet</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Hayır</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-outline-info btn-sm" })
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-warning btn-sm ms-1" })
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-sm ms-1" })
                </td>

            </tr>
        }
    </tbody>
</table>

<p>
    @Html.ActionLink("Yeni Ürün Ekle", "Create", null, new { @class = "btn btn-primary" })
</p>
