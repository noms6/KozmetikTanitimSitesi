@model KozmetikTanitimSite.Models.Product

@{
    ViewBag.Title = "Yeni Ürün Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary border-bottom pb-2">🧴 Yeni Ürün Ekle</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card shadow-sm p-4">
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <div class="mb-3">
                @Html.LabelFor(model => model.Name, "Ürün Adı", new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Ürün adını giriniz" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Description, "Açıklama", new { @class = "form-label" })
                @Html.TextAreaFor(model => model.Description, 4, 60, new { @class = "form-control", placeholder = "Kısa açıklama" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Price, "Fiyat (₺)", new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Price, new { @class = "form-control", type = "number", step = "0.01" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.ImageUrl, "Görsel URL", new { @class = "form-label" })
                @Html.TextBoxFor(model => model.ImageUrl, new { @class = "form-control", placeholder = "https://..." })
            </div>

            <div class="form-check mb-3">
                @Html.CheckBoxFor(model => model.IsFeatured, new { @class = "form-check-input" })
                @Html.LabelFor(model => model.IsFeatured, "Öne Çıkarılsın mı?", new { @class = "form-check-label" })
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">💾 Kaydet</button>
                <a href="@Url.Action("Index", "Product")" class="btn btn-outline-secondary">↩ Geri Dön</a>
            </div>
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
