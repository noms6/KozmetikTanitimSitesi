@model KozmetikTanitimSite.Models.Product

@{
    ViewBag.Title = "Ürün Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="row g-0">
            <div class="col-md-5 text-center p-3">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid rounded border" alt="@Model.Name" style="max-height: 300px;" />
                }
                else
                {
                    <div class="p-5 text-muted">Görsel mevcut değil</div>
                }
            </div>
            <div class="col-md-7">
                <div class="card-body">
                    <h3 class="card-title text-primary">@Model.Name</h3>
                    <p class="card-text fs-5"><strong>Açıklama:</strong> @Model.Description</p>
                    <p class="card-text fs-5"><strong>Fiyat:</strong> <span class="text-success">@Model.Price ₺</span></p>
                    <p class="card-text fs-5">
                        <strong>Öne Çıkan:</strong>
                        @if (Model.IsFeatured)
                        {
                            <span class="badge bg-success">Evet</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Hayır</span>
                        }
                    </p>
                    <div class="mt-4">
                        @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-outline-secondary" })
                        @Html.ActionLink("Düzenle", "Edit", new { id = Model.Id }, new { @class = "btn btn-outline-warning ms-2" })
                        @Html.ActionLink("Sil", "Delete", new { id = Model.Id }, new { @class = "btn btn-outline-danger ms-2" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
